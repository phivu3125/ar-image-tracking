{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "description": "Primary development agent with full codebase access",
      "model": "proxypal/gemini-claude-opus-4-5-thinking"
    },
    "compaction": {
      "description": "Session summarizer for context continuity across compactions"
    },
    "explore": {
      "description": "Fast codebase search specialist",
      "model": "opencode/grok-code"
    },
    "general": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    "planner": {
      "description": "Strategic planning agent for architecture and design",
      "model": "github-copilot/gpt-5.1"
    },
    "review": {
      "description": "Code review, debugging, and security audit specialist",
      "model": "proxypal/gemini-claude-opus-4-5-thinking"
    },
    "rush": {
      "description": "Fast primary agent for small, well-defined tasks",
      "model": "github-copilot/claude-opus-4.5"
    },
    "scout": {
      "description": "External research specialist for library docs and patterns",
      "model": "proxypal/gemini-claude-sonnet-4-5"
    },
    "vision": {
      "description": "Visual content specialist for multimodal analysis and UI/UX guidance",
      "model": "proxypal/gemini-3-pro-preview"
    }
  },
  "autoupdate": false,
  "compaction": {
    "auto": true,
    "prune": true
  },
  "experimental": {
    "batch_tool": true,
    "chatMaxRetries": 2,
    "continue_loop_on_deny": false,
    "lsp": true,
    "primary_tools": [
      "edit",
      "write",
      "bash"
    ]
  },
  "formatter": {
    "biome": {
      "command": [
        "npx",
        "@biomejs/biome",
        "check",
        "--write",
        "$FILE"
      ],
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".json",
        ".jsonc"
      ]
    },
    "cargo-fmt": {
      "command": [
        "cargo",
        "fmt",
        "--",
        "$FILE"
      ],
      "extensions": [
        ".rs"
      ]
    },
    "java-formatter": {
      "command": [
        "google-java-format",
        "--replace",
        "$FILE"
      ],
      "environment": {
        "JAVA_HOME": "{env:JAVA_HOME}"
      },
      "extensions": [
        ".java"
      ]
    },
    "prettier": {
      "command": [
        "npx",
        "prettier",
        "--write",
        "$FILE"
      ],
      "extensions": [
        ".html",
        ".css",
        ".scss",
        ".sass",
        ".md",
        ".yaml",
        ".yml"
      ]
    }
  },
  "instructions": [
    ".opencode/memory/user.md",
    ".opencode/memory/project/*.md"
  ],
  "keybinds": {
    "command_list": ";",
    "leader": "`",
    "session_child_cycle": "ctrl+alt+right",
    "session_child_cycle_reverse": "ctrl+alt+left",
    "session_compact": "ctrl+k"
  },
  "mcp": {
    "context7": {
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true,
      "type": "local"
    },
    "gh_grep": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  },
  "model": "github-copilot/claude-haiku-4.5",
  "permission": {
    "bash": {
      "*": "allow",
      "cat *": "allow",
      "git branch *": "allow",
      "git commit *": "ask",
      "git diff *": "allow",
      "git log *": "allow",
      "git push *": "ask",
      "git rebase *": "ask",
      "git reset *": "ask",
      "git status *": "allow",
      "ls *": "allow",
      "npm *": "allow",
      "npx *": "allow",
      "rm *": "deny",
      "rm -rf *": "deny",
      "sudo *": "deny"
    },
    "doom_loop": "ask",
    "edit": "allow",
    "external_directory": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  },
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "@franlol/opencode-md-table-formatter@0.0.3"
  ],
  "provider": {
    "github-copilot": {
      "models": {
        "claude-haiku-4.5": {
          "attachment": true,
          "options": {
            "thinking": {
              "budgetTokens": 16000,
              "type": "enabled"
            }
          },
          "reasoning": true,
          "temperature": true,
          "tool_call": true
        },
        "claude-opus-4.5": {
          "attachment": true,
          "options": {
            "thinking": {
              "budgetTokens": 32000,
              "type": "enabled"
